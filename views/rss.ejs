<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flux RSS - Annonces Immobilières</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <%- include('header') %>

    <main>
        <header>
            <h1>Annonces Immobilières</h1>
        </header>
        <section class="rss-feed">
            <% if (message) { %>
                <p><%= message %></p>
            <% } else { %>
                <ul>
                    <% items.forEach(item => { %>
                        <li>
                            <a href="<%= item.link %>"><%= item.title %></a>
                            <p><%= item.contentSnippet %></p>
                        </li>
                    <% }) %>
                </ul>
            <% } %>
        </section>
    </main>

    <%- include('footer') %>
</body>
</html>
