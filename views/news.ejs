<%- include('header') %>
<main>
    <section class="news">
        <h1>Actualit√©s</h1>
        <% if (message) { %>
            <p><%= message %></p>
        <% } else if (articles.length > 0) { %>
            <ul>
                <% articles.forEach(article => { %>
                    <li>
                        <h2><a href="<%= article.link %>" target="_blank"><%= article.title %></a></h2>
                        <p><%= article.contentSnippet %></p>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>Aucun article disponible pour le moment.</p>
        <% } %>
    </section>
</main>
